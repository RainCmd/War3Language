{
	"comments": {
		"lineComment": "//"
	},
	"brackets": [
		["{", "}"],
		["[", "]"],
		["(", ")"]
	],
	"autoClosingPairs": [
		["{", "}"],
		["[", "]"],
		["(", ")"],
		{ "open": "'", "close": "'", "notIn": ["string", "comment"] },
		{ "open": "\"", "close": "\"", "notIn": ["string", "comment"] }
	],
	"surroundingPairs": [
		["{", "}"],
		["[", "]"],
		["(", ")"],
		["<", ">"],
		["'", "'"],
		["\"", "\""]
	],
	"onEnterRules": [
		{
			"beforeText": "^\\s*(function|globals|loop|exitwhen|if|elseif|else)\\b.*$",
			"action": { "indent": "indent" }
		}
	],
	"folding": {
		"markers": {
			"start": "^\\s*//\\s*region\\b",
			"end": "^\\s*//\\s*endregion\\b"
		}
	}
}
